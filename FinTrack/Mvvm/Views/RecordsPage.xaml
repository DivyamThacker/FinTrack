<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinTrack.Mvvm.Views.RecordsPage"
                          xmlns:local="clr-namespace:FinTrack.Mvvm.Components"
             Title="RecordsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">


    <Grid ColumnDefinitions="1*, 9*" RowDefinitions="1* ,11*">

        <local:NavigationComponent Grid.Row="0" Grid.Column="0" Grid.RowSpan="12" />

        <local:HeaderComponent Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="9" />


        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="9" Grid.RowSpan="11" BackgroundColor="Pink" Margin="20, 20, 40, 20">
        </Grid>
    </Grid>

</ContentPage>