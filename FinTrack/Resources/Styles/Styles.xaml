<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinTrack.Resources.Styles.Styles"
             xmlns:overview="clr-namespace:FinTrack.Mvvm.Views"       >

    <Style TargetType="Label" x:Key="NavigationLabel">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <Style TargetType="ImageButton" x:Key="NavigationButton">
        <Setter Property="HeightRequest" Value="25" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Blue}" />
        <Setter Property="BorderColor" Value="{DynamicResource Blue}" />
        <Setter Property="Margin" Value="0,15,0,0" />
    </Style>

    <DataTemplate x:Key="ItemTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="{Binding Text}" FontSize="16" />
        </Grid>
    </DataTemplate>


</ResourceDictionary>
